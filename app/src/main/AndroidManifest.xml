<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.strath.strathvoting">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ResultsDetailActivity" android:parentActivityName=".VotingActivity"></activity>
        <activity android:name=".VoteDetailActivity" android:parentActivityName=".VotingActivity"/>
        <activity android:name=".voteAvtivity" />
        <activity
            android:name=".VotingActivity"
            android:label="Strathmore Voting"
            android:parentActivityName=".UserProfileActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".CandidatesDetailActivity"
            android:parentActivityName=".VotingActivity" />
        <activity
            android:name=".SignupActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity android:name=".UserProfileActivity" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>